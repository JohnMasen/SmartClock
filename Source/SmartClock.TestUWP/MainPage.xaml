        <Button x:Name="btnRun" Content="Run" Grid.ColumnSpan="2" HorizontalAlignment="Left" Grid.RowSpan="2" VerticalAlignment="Top" Height="106" Width="143" Click="btnRun_Click" Grid.Row="1"/>
